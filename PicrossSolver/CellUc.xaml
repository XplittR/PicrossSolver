<UserControl x:Class="PicrossSolver.CellUc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:domain="clr-namespace:Domain;assembly=Domain"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance domain:CellPresenter}"
             Height="30" Width="30" Visibility="{Binding CellVisibility}">
    <Border Background="{Binding MyColor}" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Ellipse Visibility="{Binding IsConnectedVisibility}"/>
            <TextBlock Text="{Binding Count}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
        </Grid>
    </Border>
</UserControl>
